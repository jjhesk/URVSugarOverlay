<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:soulwolf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <net.soulwolf.widget.ratiolayout.widget.RatioFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            soulwolf:datumRatio="datumWidth"
            soulwolf:heightRatio="9.0"
            soulwolf:widthRatio="16.0">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ca43fff8"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="RatioFrameLayout:16*9"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </net.soulwolf.widget.ratiolayout.widget.RatioFrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.soulwolf.widget.ratiolayout.widget.RatioImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#caff49db"
                android:scaleType="centerCrop"
                soulwolf:datumRatio="datumWidth"
                soulwolf:heightRatio="7.0"
                soulwolf:widthRatio="16.0" />

            <net.soulwolf.widget.ratiolayout.widget.RatioTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="RatioImageView/RatioTextView:16*7"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                soulwolf:datumRatio="datumWidth"
                soulwolf:heightRatio="7.0"
                soulwolf:widthRatio="16.0" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <net.soulwolf.widget.ratiolayout.widget.RatioImageView
                android:id="@+id/image5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff4532"
                android:scaleType="centerCrop"
                soulwolf:datumRatio="datumWidth"
                soulwolf:heightRatio="1.0"
                soulwolf:widthRatio="1.0" />

            <net.soulwolf.widget.ratiolayout.widget.RatioImageView
                android:id="@+id/image6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="#ff00ff22"
                android:scaleType="centerCrop"
                soulwolf:datumRatio="datumWidth"
                soulwolf:heightRatio="1.0"
                soulwolf:widthRatio="1.0" />

        </LinearLayout>

        <net.soulwolf.widget.ratiolayout.widget.RatioLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            soulwolf:datumRatio="datumWidth"
            soulwolf:heightRatio="7.0"
            soulwolf:widthRatio="15.0">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff931c"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_level_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="RatioLinearLayout:15*7"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </net.soulwolf.widget.ratiolayout.widget.RatioLinearLayout>

        <net.soulwolf.widget.ratiolayout.widget.RatioRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            soulwolf:datumRatio="datumWidth"
            soulwolf:heightRatio="10.0"
            soulwolf:widthRatio="15.0">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4437ff"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_level_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="RatioRelativeLayout:15*10"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </net.soulwolf.widget.ratiolayout.widget.RatioRelativeLayout>
    </LinearLayout>

</ScrollView>